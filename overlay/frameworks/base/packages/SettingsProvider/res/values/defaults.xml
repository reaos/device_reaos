<resources>
    <!-- Disable sound effects -->
    <bool name="def_sound_effects_enabled">false</bool>

    <!-- Disable the animations -->
    <fraction name="def_window_animation_scale">0%</fraction>
    <fraction name="def_window_transition_scale">0%</fraction>

    <!-- Allow the user to install non-market applications by default -->
    <bool name="def_install_non_market_apps">true</bool>

    <!-- Enable Wi-Fi by default -->
    <bool name="def_wifi_on">true</bool>

    <!-- Disable notifications on the lock screen -->
    <integer name="def_lock_screen_show_notifications">0</integer>
</resources>
