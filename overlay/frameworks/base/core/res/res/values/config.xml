<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds.  Do not translate.

     NOTE: The naming convention is "config_camelCaseValue". Some legacy
     entries do not follow the convention, but all new entries should. -->

<resources>
    <!-- Maximum number of supported users -->
    <integer name="config_multiuserMaximumUsers">1000</integer>

    <!-- Enable multiuser UI -->
    <bool name="config_enableMultiUserUI">true</bool>

    <!-- Enable multiple admins -->
    <bool name="config_enableMultipleAdmins">true</bool>

    <!-- Enable the user switcher -->
    <bool name="config_showUserSwitcherByDefault">true</bool>

    <!-- Enable the user switcher on the keyguard -->
    <bool name="config_keyguardUserSwitcher">true</bool>

    <!-- Disable transition animations -->
    <bool name="config_disableTransitionAnimation">true</bool>

    <!-- Disable Auto Rotation -->
    <bool name="config_supportAutoRotation">false</bool>

    <!-- Use the default system volume for all -->
    <bool name="config_single_volume">true</bool>

    <!-- Enable double tap to wake -->
    <bool name="config_supportDoubleTapWake">true</bool>

    <!-- Set the default refresh rate -->
    <integer name="config_defaultRefreshRate">30</integer>
</resources>
